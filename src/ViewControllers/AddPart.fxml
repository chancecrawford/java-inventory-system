<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="425.0"
            style="-fx-background-color: F6F6F6;" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="ViewControllers.AddPartController">
    <VBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="303.0" prefWidth="428.0">
        <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0"/>
        </padding>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="470.0">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Add Part">
                <padding>
                    <Insets right="40.0"/>
                </padding>
            </Label>
            <RadioButton fx:id="SelectInHouse" mnemonicParsing="false" style="-fx-font-weight: bold;"
                         text="In-House">
                <padding>
                    <Insets right="40.0"/>
                </padding>
                <toggleGroup>
                    <ToggleGroup fx:id="PartType"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="SelectOutsourced" mnemonicParsing="false" style="-fx-font-weight: bold;"
                         text="Outsourced" toggleGroup="$PartType"/>
        </HBox>
        <GridPane alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT"
                  prefHeight="225.0" prefWidth="400.0">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="200.0" minWidth="133.0"
                                   prefWidth="138.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="200.0" minWidth="91.0"
                                   prefWidth="112.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="40.0" minHeight="0.0" prefHeight="20.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <padding>
                <Insets left="50.0" right="100.0"/>
            </padding>
            <Label style="-fx-font-weight: bold;" text="ID" textAlignment="CENTER">
                <padding>
                    <Insets left="50.0"/>
                </padding>
            </Label>
            <Label alignment="CENTER" layoutX="10.0" layoutY="40.0" style="-fx-font-weight: bold;" text="Name"
                   textAlignment="CENTER" GridPane.rowIndex="1">
                <padding>
                    <Insets left="50.0"/>
                </padding>
            </Label>
            <Label alignment="CENTER" layoutX="10.0" layoutY="40.0" style="-fx-font-weight: bold;" text="Inv"
                   textAlignment="CENTER" GridPane.rowIndex="2">
                <padding>
                    <Insets left="50.0"/>
                </padding>
            </Label>
            <Label alignment="CENTER" layoutX="10.0" layoutY="200.0" style="-fx-font-weight: bold;"
                   text="Price/Cost" textAlignment="CENTER" GridPane.rowIndex="3">
                <padding>
                    <Insets left="50.0"/>
                </padding>
            </Label>
            <GridPane GridPane.rowIndex="4">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label alignment="CENTER" style="-fx-font-weight: bold;" text="Max" textAlignment="CENTER"
                       GridPane.halignment="LEFT">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </Label>
                <TextField fx:id="AddPartMax" prefHeight="10.0" GridPane.columnIndex="1"/>
            </GridPane>
            <TextField fx:id="AddPartID" prefHeight="10.0" GridPane.columnIndex="1"/>
            <TextField fx:id="AddPartName" prefHeight="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <TextField fx:id="AddPartInv" prefHeight="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <TextField fx:id="AddPartPrice" prefHeight="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <TextField fx:id="AddPartDynamicField" prefHeight="10.0" GridPane.columnIndex="1"
                       GridPane.rowIndex="5"/>
            <Label fx:id="TypeLabel" style="-fx-font-weight: bold;" GridPane.rowIndex="5">
                <font>
                    <Font size="14.0"/>
                </font>
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <padding>
                    <Insets left="5.0"/>
                </padding>
            </Label>
            <GridPane GridPane.columnIndex="1" GridPane.rowIndex="4">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label alignment="CENTER" style="-fx-font-weight: bold;" text="Min" textAlignment="CENTER">
                    <padding>
                        <Insets left="25.0"/>
                    </padding>
                </Label>
                <TextField fx:id="AddPartMin" prefHeight="10.0" GridPane.columnIndex="1"/>
            </GridPane>
        </GridPane>
        <ButtonBar prefHeight="40.0" prefWidth="200.0">
            <buttons>
                <Button fx:id="addPartSave" mnemonicParsing="false" text="Save"/>
                <Button fx:id="addPartCancel" layoutX="405.0" layoutY="18.0" mnemonicParsing="false" text="Cancel"/>
            </buttons>
        </ButtonBar>
    </VBox>
</AnchorPane>
